{
  "name" : "Salesforce",
  "tags": ["outgoing","oneColumn", "batch"],
  "description" : "Enrich your Leads and Contacts in Salesforce and Trigger Powerful Workflows",
  "readme" : "readme.md",
  "admin" : "/auth",
  "version" : "0.2.6",
  "version" : "0.3.0",
  "picture": "picture.png",
  "ui": false,
  "settings" : [
    {
      "name" : "last_sync_at",
      "type" : "number",
      "format" : "hidden"
    }
  ],
  "private_settings" : [
    {
      "name": "refresh_token",
      "type": "string",
      "format" : "hidden"
    },
    {
      "name": "access_token",
      "type": "string",
      "format" : "hidden"
    },
    {
      "name": "instance_url",
      "type": "string",
      "format" : "hidden"
    },
    {
      "name": "connector_hero",
      "title": "Connector Configuration",
      "format": "title",
      "type": "string"
    },
    {
      "name": "synchronized_segments",
      "title": "Send users belonging to one of these segments to Salesforce",
      "description": "Only users in the specified segments are sent. Updates from Salesforce are always fetched for all users.",
      "type": "array",
      "format": "segment",
      "items": {
        "type": "string"
      },
      "default": []
    },
    {
      "name": "leads",
      "title": "Leads sync",
      "format": "title",
      "type": "string"
    },
    {
      "name" : "leads_mapping",
      "title" : "List of Lead fields to send from Hull to Salesforce",
      "type" : "array",
      "format" : "table",
      "default" : [
        { "hull_field_name" : "first_name", "salesforce_field_name" : "FirstName", "default_value" : "[Unknown]", "overwrite" : false },
        { "hull_field_name" : "last_name", "salesforce_field_name" : "LastName", "default_value" : "[Unknown]", "overwrite" : false },
        { "hull_field_name" : "email", "salesforce_field_name" : "Email", "overwrite" : false }
      ],
      "items" : {
        "type" : "object",
        "properties" : {
          "hull_field_name" : {
            "type" : "string",
            "format" : "trait",
            "title" : "Hull Field"
          },
          "salesforce_field_name" : {
            "type" : "string",
            "title" : "Salesforce Field",
            "format" : "select",
            "options" : {
              "loadOptions" : "/schema/lead_updateable"
            }
          },
          "overwrite" : {
            "type" : "boolean",
            "title" : "overwrite",
            "default" : false
          }
        },
        "required" : [
          "hull_field_name",
          "salesforce_field_name"
        ]
      }
    },
    {
      "name" : "fetch_lead_fields",
      "title" : "List of Lead fields to fetch from Salesforce",
      "type" : "array",
      "format" : "select",
      "options" : {
        "loadOptions" : "/schema/lead"
      }
    },
    {
      "name": "contacts",
      "title": "Contacts sync",
      "format": "title",
      "type": "string"
    },
    {
      "name" : "contacts_mapping",
      "title" : "List of Contact fields to send from Hull to Salesforce",
      "type" : "array",
      "format" : "table",
      "default" : [
        { "hull_field_name" : "first_name", "salesforce_field_name" : "FirstName", "default_value" : "[Unknown]", "overwrite" : false },
        { "hull_field_name" : "last_name", "salesforce_field_name" : "LastName", "default_value" : "[Unknown]", "overwrite" : false },
        { "hull_field_name" : "email", "salesforce_field_name" : "Email", "overwrite" : false }
      ],
      "items" : {
        "type" : "object",
        "properties" : {
          "hull_field_name" : {
            "type" : "string",
            "format" : "trait",
            "title" : "Hull Field"
          },
          "salesforce_field_name" : {
            "type" : "string",
            "title" : "Salesforce Field",
            "format" : "select",
            "options" : {
              "loadOptions": "/schema/contact_updateable"
            }
          },
          "overwrite" : {
            "type" : "boolean",
            "title" : "Hull overwrites Salesforce",
            "default" : false
          }
        },
        "required" : [
          "hull_field_name",
          "salesforce_field_name"
        ]
      }
    },
    {
      "name" : "fetch_contact_fields",
      "title" : "List of Contact fields to fetch from Salesforce",
      "type" : "array",
      "format" : "select",
      "options" : {
        "loadOptions" : "/schema/contact"
      }
    },
    {
      "name": "advance_hero",
      "title": "Advanced Settings",
      "format": "title",
      "type": "string"
    },
    {
      "name": "salesforce_oauth_url",
      "title": "Salesforce Login Url",
      "type": "string",
      "default": "https://login.salesforce.com",
      "description": "Use 'https://login.salesforce.com' to connect to your production environment. See instructions how to connect to a sandbox environment."
    },
    {
      "name": "accounts",
      "title": "Accounts sync",
      "format": "title",
      "type": "string"
    },
    {
      "name": "fetch_accounts",
      "title": "Fetch Accounts",
      "description": "Enable fetching Salesforce Accounts to Hull",
      "type": "boolean",
      "default": false
    },
    {
      "name" : "accounts_mapping",
      "title" : "List of Account fields to push to Salesforce",
      "type" : "array",
      "format" : "table",
      "default" : [
        { "hull_field_name" : "domain", "salesforce_field_name" : "Website", "default_value" : "[Unknown]", "overwrite" : false },
        { "hull_field_name" : "name", "salesforce_field_name" : "Name", "default_value" : "[Unknown]", "overwrite" : false }
      ],
      "items" : {
        "type" : "object",
        "properties" : {
          "hull_field_name" : {
            "type" : "string",
            "format" : "trait",
            "title" : "Hull Field"
          },
          "salesforce_field_name" : {
            "type" : "string",
            "title" : "Salesforce Field",
            "format" : "select",
            "options" : {
              "loadOptions": "/schema/account_updateable"
            }
          },
          "overwrite" : {
            "type" : "boolean",
            "title" : "Hull overwrites Salesforce",
            "default" : false
          }
        },
        "required" : [
          "hull_field_name",
          "salesforce_field_name"
        ]
      }
    },
    {
      "name": "synchronized_account_segments",
      "title": "Filter accounts",
      "description": "Global filter. Only send if account matches one of these segments.",
      "type": "array",
      "format": "segment",
      "items": {
        "type": "string"
      },
      "default": []
    },
    {
      "name" : "fetch_account_fields",
      "title" : "List of Account fields to fetch from Salesforce",
      "type" : "array",
      "format" : "select",
      "options" : {
        "loadOptions" : "/schema/account"
      }
    }
  ],
  "schedules": [
    {
      "url": "/sync",
      "type": "cron",
      "value": "*/5 * * * *"
    }
  ],
  "subscriptions" : [ { "url" : "/notify" } ]
}
